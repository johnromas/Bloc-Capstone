<h1>Jobs</h1>

<div class="row">
  <div class="col-md-8">
    <% @jobs.each do |job| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to job.name, job %>
          </h4>
          <small>
            <%= job.number %><br>
            <%= job.city %>, <%= job.state.name if job.state %> <%= job.zip %>
          </small>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-md-4">
      <%= link_to "New Job", new_job_path, class: 'btn btn-primary' %>
  </div>
</div>
