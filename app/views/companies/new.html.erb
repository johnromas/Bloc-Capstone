<h1>New Company</h1>
<div class="row">
  <div class="col-sm-4">
    <%= simple_form_for @company do |f| %>
      <%= f.input :name %>
      <%= f.input :address, input_html: { class: 'form-control input-sm'} %>
      <%= f.input :city, input_html: { class: 'form-control input-sm'} %>
      <%= f.association :state, input_html: { class: 'form-control input-sm'} %>
      <%= f.input :zip, input_html: { class: 'form-control input-sm'} %>
      <%= f.input :phone, input_html: { class: 'form-control input-sm'} %>
      <%= f.input :fax, input_html: { class: 'form-control input-sm'} %>
      <%= f.input :website, input_html: { class: 'form-control input-sm'} %>
      <%= f.association :company_type, input_html: { class: 'form-control input-sm'} %>
      <%= f.association :trade, input_html: { class: 'form-control input-sm'} %>
      <%= f.input :notes, input_html: { class: 'form-control input-sm'} %>
      <%= f.submit "Save", input_html: { class: 'btn btn-success'} { rows="10"} %>

      <% end %>
      
  </div>
</div>