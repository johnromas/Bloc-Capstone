<h1>Companies</h1>

<div class="row">
  <div class="col-md-8">
    <% @companies.each do |company| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to company.name, company %>
          </h4>
          <small>
            <%= company.address %><br>
            <%= company.city %>, <%= company.state.name %> <%= company.zip %>
          </small>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-md-4">
      <%= link_to "New Company", new_company_path, id: "new_company", class: 'btn btn-primary', remote: true %>
  </div>
</div>

